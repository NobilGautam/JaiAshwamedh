<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jingle_row"
    app:cardCornerRadius="80dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    app:cardElevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/card_view_color">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_jingle_24"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/jingle_row_title"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/oswald"
                android:text="Kashmakash"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/jingle_row_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scene: 2"
                android:fontFamily="@font/oswald"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/jingle_row_date_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date added: 18/8/2022"
                android:fontFamily="@font/oswald"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:textSize="10dp"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/jingle_row_proceed_button">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>